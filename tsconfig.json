{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "outDir": "dist/",
    "rootDir": "src/",
    "lib": ["es6", "ESNext"],
    "incremental": true,
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "files": ["./src/typings.d.ts"],
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
